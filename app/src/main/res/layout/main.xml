
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="viewmodel"
            type="ke.co.capiyo.fanzone.AppViewModela" />
    </data>



<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="18sp"
        android:background="@color/white"
        app:tabIconTint="@color/black"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:tabIndicatorColor="@color/white"
        app:tabSelectedTextColor="@color/best"
        app:tabTextColor="@color/gray"
        app:tabTextAppearance="@style/CustomTextAppearanceTab"

        />


    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewpager"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_marginTop="120dp"
        app:layout_constraintTop_toBottomOf="@id/tabLayout"
        android:layout_height="match_parent" />




        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/accountfl"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintRight_toRightOf="parent"
            android:src="@drawable/baseline_account_circle_24"
            android:visibility="visible"
            app:fabSize="normal"
            app:fabCustomSize="40dp"
            android:layout_gravity="bottom|end"
            android:layout_marginBottom="20dp"
            android:layout_marginRight="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/chats"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintRight_toLeftOf="@+id/accountfl"
        android:src="@drawable/baseline_groups_2_24"
        android:visibility="visible"
        app:fabSize="normal"
        android:layout_gravity="bottom|end"
        app:fabCustomSize="40dp"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        />







    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/friendsfl"
        app:layout_constraintRight_toLeftOf="@+id/postLay"
        app:layout_constraintBottom_toBottomOf="parent"
        >

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/friends"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="10dp"
            android:visibility="gone"
            app:backgroundTint="@color/best" />
        <TextView android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Friends"
            android:elevation="6dp"
            android:visibility="gone"

            android:textSize="12dp"
            android:textColor="#fff"
            app:layout_anchor="@id/friends"
            app:layout_anchorGravity="center"/>








    </androidx.coordinatorlayout.widget.CoordinatorLayout>


















    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:id="@+id/postLay"
        app:layout_constraintRight_toLeftOf="@+id/accountfl"
        app:layout_constraintBottom_toBottomOf="parent"
        >

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/postfl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="10dp"
        android:visibility="gone"
        app:backgroundTint="@color/best" />

    <TextView android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Post"
        android:elevation="6dp"
        android:visibility="gone"
        android:textSize="12dp"
        android:textColor="#fff"
        app:layout_anchor="@id/postfl"
        app:layout_anchorGravity="center"/>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>














</androidx.constraintlayout.widget.ConstraintLayout>
</layout>