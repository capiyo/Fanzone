<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
	android:id="@+id/secondToolbar"
    android:background="@color/best">
	<RelativeLayout

		xmlns:app="http://schemas.android.com/apk/res-auto"
		xmlns:tools="http://schemas.android.com/tools"
		android:layout_width="match_parent"
	
		android:id="@+id/myRelative"

		android:layout_height="100dp">
	<ImageView
		android:layout_width="30dp"
		android:layout_height="30dp"
		
		
		android:background="@drawable/finder"

		android:id="@+id/toolbarImage"
		

	/>
		<TextView
			android:layout_width="wrap_content"
			android:id="@+id/musername"
			android:text="Send"
			
			android:fontFamily="san-serif-black"
			android:textSize="15sp"
			android:layout_toRightOf="@id/toolbarImage"
			android:layout_height="wrap_content"/>
		<TextView
			android:layout_width="wrap_content"
			android:id="@+id/mphone"
			android:layout_toRightOf="@id/toolbarImage"
			android:layout_below="@id/musername"
			android:text="Phone"
			android:textSize="10sp"
			android:layout_height="wrap_content"/>
		<TextView
			android:layout_width="wrap_content"
			android:id="@+id/mstatus"
			android:text="Online"
			android:textColor="@color/dorgerblue"
			android:layout_below="@id/mphone"
			android:layout_toRightOf="@id/toolbarImage"
			android:textSize="10sp"
			android:layout_height="wrap_content"/>
	</RelativeLayout>

</androidx.appcompat.widget.Toolbar>
