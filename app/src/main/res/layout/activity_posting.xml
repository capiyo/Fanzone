<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_horizontal"
    android:background="@drawable/down"
    android:orientation="vertical"
    android:padding="16dp">

    <com.mikhaellopez.circularimageview.CircularImageView
        android:layout_width="50dp"
        app:civ_border_color="@color/crimson"
        app:layout_constraintTop_toTopOf="parent"
        app:civ_border_width="3dp"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/accountImage"
        android:src="@mipmap/iconia"
        android:layout_marginLeft="10dp"
        android:layout_height="50dp"/>
    <TextView
        android:id="@+id/accountName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@+id/accountImage"
        app:layout_constraintRight_toRightOf="parent"
        android:text="@string/username"
        android:textColor="@color/black" />


    <TextView
        android:id="@+id/accountTell"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@+id/accountName"
        android:text="@string/username"
        app:layout_constraintRight_toRightOf="parent"
        android:textColor="@color/black" />





    <EditText
        android:id="@+id/message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/accountTell"
        android:hint="Say  something here"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/black" />
    <TextView
        android:id="@+id/addImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/message"
        android:text="Add Image"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/black" />

    <Button
        android:id="@+id/submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:src="@drawable/message_left"
        app:layout_constraintTop_toBottomOf="@+id/addImage"
        android:text="Submit"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/black"/>




</androidx.constraintlayout.widget.ConstraintLayout>