<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	app:cardElevation="2dp"
	app:cardCornerRadius="10dp"

	app:cardBackgroundColor="@color/gray"
	app:cardMaxElevation="2dp"
	app:cardPreventCornerOverlap="true"
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	app:cardUseCompatPadding="true"
	>
<androidx.constraintlayout.widget.ConstraintLayout
	android:layout_width="match_parent"
	android:id="@+id/gamesLinear"
    android:layout_height="150dp">


	<TextView
		android:id="@+id/homeTeam"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginStart="20sp"
		android:layout_marginTop="20sp"
		android:background="@drawable/buttona"
		android:fontFamily="sans-serif"
		android:padding="9dp"
		android:text="@string/app_name"
		android:textColor="@color/black"
		android:textSize="12sp"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent" />





	<TextView
		android:fontFamily="sans-serif"
		android:layout_width="wrap_content"
		android:id="@+id/homeWin"
		app:layout_constraintTop_toBottomOf="@+id/homeTeam"
		android:layout_marginLeft="30dp"
		app:layout_constraintStart_toStartOf="parent"
		android:text="60%"
		android:textSize="11sp"
		android:layout_height="wrap_content"/>




	<TextView
		android:id="@+id/vs"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginLeft="10dp"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintLeft_toRightOf="@+id/homeTeam"
		android:fontFamily="sans-serif"
		android:layout_marginTop="20dp"
		android:text="vs"

		android:textSize="15sp" />

	<TextView
		android:id="@+id/openDiscus"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		app:layout_constraintEnd_toEndOf="parent"
		android:background="@drawable/buttona"
		android:fontFamily="sans-serif-black"
		android:layout_marginTop="70dp"
		android:layout_marginLeft="60dp"
		android:padding="8dp"
		android:text="Comments"
		app:layout_constraintBottom_toBottomOf="parent"
		android:textAlignment="center"
		android:textColor="@color/white"
		android:textSize="8sp" />


	<TextView
		android:fontFamily="sans-serif"
		android:layout_width="wrap_content"
		android:layout_marginLeft="10dp"
		app:layout_constraintLeft_toRightOf="@+id/vs"
		android:text="@string/app_name"
		android:textColor="@color/black"
		android:layout_marginTop="20dp"
		app:layout_constraintTop_toTopOf="parent"
		android:padding="9dp"
		android:background="@drawable/buttona"
		android:textSize="12sp"
		android:id="@+id/awayTeam"
		
		

		android:layout_height="wrap_content"/>
	<TextView
		android:fontFamily="sans-serif"
		android:layout_width="wrap_content"
		android:id="@+id/awayWin"
		android:text="40%"
		app:layout_constraintTop_toBottomOf="@+id/awayTeam"
		android:textSize="15sp"
		app:layout_constraintStart_toStartOf="@id/awayTeam"
		android:layout_below="@id/awayTeam"
		android:layout_height="wrap_content"/>

	

	





	<TextView
		android:layout_width="wrap_content"
		android:id="@+id/progress"
		android:text="Upcoming"
		android:textSize="12sp"
		android:layout_marginTop="20dp"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		android:textColor="@color/black"
		android:layout_height="wrap_content"/>
	
	
	<TextView
		android:layout_marginTop="5dp"
		android:layout_width="wrap_content"
		android:id="@+id/date"
		app:layout_constraintTop_toBottomOf="@+id/progress"
		app:layout_constraintEnd_toEndOf="parent"
		android:text="Date"
		android:layout_height="wrap_content"/>


	<TextView
		android:layout_marginTop="5dp"
		android:layout_width="wrap_content"
		android:id="@+id/time"
		app:layout_constraintEnd_toEndOf="parent"
		android:text="Time"
		app:layout_constraintTop_toBottomOf="@+id/date"
		android:layout_height="wrap_content"/>


		<TextView
			android:layout_marginTop="5dp"
			android:layout_width="wrap_content"
			android:id="@+id/score"
			android:visibility="gone"
			app:layout_constraintLeft_toRightOf="@id/openDiscus"
			app:layout_constraintBottom_toBottomOf="parent"
			android:text="Score"
			android:layout_height="wrap_content"/>


	<com.mikhaellopez.circularimageview.CircularImageView
		android:layout_width="20dp"
		app:civ_border_color="@color/best"
		app:civ_border_width="3dp"
		app:layout_constraintTop_toBottomOf="@+id/homeWin"
		app:layout_constraintStart_toStartOf="parent"
		android:id="@+id/chatImage"
		android:src="@mipmap/iconia"
		android:layout_height="20dp"/>
	<TextView
		android:id="@+id/chatusername"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:fontFamily="sans-serif-black"
		app:layout_constraintLeft_toRightOf="@+id/chatImage"
		android:text="@string/app_name"
		app:layout_constraintTop_toBottomOf="@+id/homeWin"
		android:textColor="@color/black"
		android:textSize="10sp" />
	<TextView
		android:id="@+id/chatclub"
		app:layout_constraintLeft_toRightOf="@+id/chatImage"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		app:layout_constraintTop_toBottomOf="@+id/chatusername"
		android:layout_below="@id/chatusername"
		android:text="@string/club"
		android:textColor="@color/black"
		android:textSize="15sp" />

	<TextView
		android:id="@+id/last_comment"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_below="@id/chatclub"
		android:layout_marginRight="40dp"
		android:layout_marginTop="4dp"
		android:fontFamily="sans-serif"
		android:text="Am a man united fan for life,,, nothing can separate me from man united come rain come sun shine❤️❤️💕🙌"
		android:textSize="12sp"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/chatclub" />


</androidx.constraintlayout.widget.ConstraintLayout>
		


	
	
	







</androidx.cardview.widget.CardView>
